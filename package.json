{
  "name": "ng-i18n-checker",
  "version": "0.5.0",
  "description": "Utility validate i18n attribution for angular >= 2 projects.",
  "main": "dist/Validator.js",
  "typings": "dist/Validator.d.ts",
  "scripts": {
    "lint": "tslint --type-check --project tsconfig.json \"src/**/*.ts\"",
    "test": "mocha --timeout 10000 --compilers ts:ts-node/register \"src/**/*.test.ts\"",
    "build": "rimraf dist && tsc",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "bin": {
    "ng-i18n-checker": "./dist/bin.js"
  },
  "keywords": [
    "angular",
    "i18n"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WatchBeam/ng-i18n-checker.git"
  },
  "author": {
    "name": "Simon Schick",
    "email": "sischick@microsoft.com",
    "url": "https://github.com/SimonSchick"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^1.1.3",
    "glob": "^7.1.1",
    "htmlparser2": "^3.9.2",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/chalk": "^0.4.31",
    "@types/glob": "^5.0.30",
    "@types/htmlparser2": "^3.7.29",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.8",
    "@types/yargs": "^6.6.0",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "ts-node": "^3.0.2",
    "tslint": "^4.5.1",
    "tslint-microsoft-contrib": "4.0.0",
    "typescript": "~2.2.2"
  },
  "engines": {
    "node": "^6.0.0"
  }
}
